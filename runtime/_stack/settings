#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/dotnetcore/runtime"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_dotnetcore_runtime"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_dotnetcore_runtime"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_dotnetcore_runtime_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_STACKPREFIX}_dotnetcore_runtime_volume:/app"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_DOTNETCORE_RUNTIME_PORTS,\
$VCW_STACK_DOTNETCORE_RUNTIME_NETWORKS,\
$VCW_STACK_DOTNETCORE_RUNTIME_VOLUMES,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="dotnetcore"
export VCW_STACK_GLOBAL_IMAGE_NAME="mcr.microsoft.com/dotnetcore.runtime"
export VCW_STACK_DOTNETCORE_RUNTIME_PORTS=
export VCW_STACK_DOTNETCORE_RUNTIME_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_DOTNETCORE_RUNTIME_VOLUMES="'${DOLLAR}{VCW_STACK_STACKPREFIX}_dotnetcore_runtime_volume:/app'"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_dotnetcore_runtime_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS artifactory.base
export VCW_STACK_DOTNETCORE_RUNTIME_ENVIRONMENT=
export VCW_STACK_DOTNETCORE_RUNTIME_COMMAND="--keepalive:0"
export VCW_STACK_DOTNETCORE_RUNTIME_DEPLOY_MODE="replicated"
export VCW_STACK_DOTNETCORE_RUNTIME_DEPLOY_RESOURCES_LIMITS_MEMORY="24m"
export VCW_STACK_DOTNETCORE_RUNTIME_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS artifactory.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
